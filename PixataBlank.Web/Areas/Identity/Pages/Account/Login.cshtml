@page "/Login"
@using PixataBlank.Web.Helpers
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}

<h1><span class="oi oi-account-login" aria-hidden="true"></span> Log in</h1>
<div class="row">
  <div class="col-md-6">
    <section>
      <form id="account" method="post">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
          <label asp-for="Input.Email" class="col-lg-2 col-form-label"></label>
          <div class="col-lg-10 input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="@IconsHelper.Email"></i>
              </span>
            </div>
            <input asp-for="Input.Email" class="form-control" />
            <div class="input-group-append">
              <div class="input-group-text has-error">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <label asp-for="Input.Password" class="col-lg-2 col-form-label"></label>
          <div class="col-lg-10 input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="@IconsHelper.Key"></i>
              </span>
            </div>
            <input asp-for="Input.Password" class="form-control" />
            <div class="input-group-append">
              <div class="input-group-text has-error">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col offset-2">
            <button type="submit" class="btn btn-primary">Log in</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}