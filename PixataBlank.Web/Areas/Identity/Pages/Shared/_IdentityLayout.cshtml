@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@using PixataBlank.Web.Helpers
@inject IWebHostEnvironment _environment
@inject ICompositeViewEngine _engine
@inject UserManager<User> _userManager
@inject SignInManager<User> _signInManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  Func<string, string, string> activeClass = (targetUrl, className) => Context.Request.Path.Value!.ToLower() == targetUrl ? className : "";

  string url = Context.Request.Path;
  string qs = Context.Request.QueryString.Value ?? "";
  string returnUrl = url + qs;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - PixataBlank</title>
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.14.0/css/all.css" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css" integrity="sha512-UyNhw5RNpQaCai2EdC+Js0QL4RlVmiq41DkmCJsRV3ZxipG2L0HhTqIf/H9Hp8ez2EnFlkBnjRGJU2stW3Lj+w==" crossorigin="anonymous" />
  <link rel="stylesheet" href="_content/Telerik.UI.for.Blazor/css/kendo-theme-bootstrap/all.css" />
  <link rel="stylesheet" href="/css/site.css" />
</head>
<body class="m-0">
  <div class="app">
    @if (_signInManager.IsSignedIn(User)) {
      <div class="sidebar">
        <div class="">
          <a class="navbar-brand text-light ml-0 px-3 pt-1" href="/"><img src="/images/logo.png" alt="" width="44" height="44" /> PixataBlank</a>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <span class="@IconsHelper.Dashboard"></span> Dashboard
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="main">
        <div class="top-row px-4 justify-content-end">
          <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle text-light" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="@IconsHelper.UserFas fa-fw"></i> @((await _userManager.GetUserAsync(User))?.FullName)</a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="/Settings/Profile?returnUrl=@returnUrl">
                  <i class="@IconsHelper.User mr-2"></i>Profile
                </a>
                <a class="dropdown-item" href="/ChangePassword">
                  <i class="@IconsHelper.Key mr-2"></i>Change Password
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/LogOut">
                  <i class="@IconsHelper.LogOut mr-2"></i>Log out
                </a>
              </div>
            </li>
          </ul>
        </div>

        <div class="content px-4">
          @RenderBody()
        </div>
      </div>
    } else {
      <div class="sidebar">
        <div class="">
          <a class="navbar-brand text-light ml-0 px-3 pt-1 w-100" href="/"><img src="logo.png" alt="" width="44" height="44" class="mr-2" /> PixataBlank</a>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link @activeClass("/login","active")" href="/Login">
                <span class="@IconsHelper.LogIn"></span> Log in
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="main">
        <div class="content px-4">
          @RenderBody()
        </div>
      </div>
    }
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="_framework/blazor.server.js"></script>
  <script src="_content/Telerik.UI.for.Blazor/js/telerik-blazor.js"></script>
  @await RenderSectionAsync("Scripts", false)
</body>
</html>
